extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Periodo #{periodo.id}

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li
                    b Nome:
                    span= periodo.nome
                li
                    b ID:
                    span= periodo.id

        footer.w3-container.w3-teal
            address
                span Gerado por galuno::EngWeb2024 em #{date} - [
                a(href="/periodos") Voltar
                span ]
    