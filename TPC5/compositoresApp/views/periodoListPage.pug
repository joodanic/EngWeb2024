extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Periodos List
                    a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
                    
                </header>
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                each periodo in lPeriodos
                    tr 
                        td= periodo.id 
                        td
                            a(href="/periodos/" + periodo.id)= periodo.nome 
                        td= periodo.nome
                        td 
                            span [
                            a(href="/periodos/edit/" + periodo.id) Edit
                            span ]
                            span [
                            a(href="/periodos/delete/" + periodo.id) Delete
                            span ]

        footer.w3-container.w3-blue
            h5 Generated by RPCW2023 in #{date}